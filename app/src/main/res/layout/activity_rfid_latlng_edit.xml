<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_collapseMode="pin"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
  </com.google.android.material.appbar.AppBarLayout>


  <androidx.cardview.widget.CardView
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="5dp"
      android:foreground="?attr/selectableItemBackground"
      android:layout_margin="5dp"
      app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_de"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="22222222"
            android:id="@+id/tv_bacth_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_de"
            android:textSize="16sp"
            android:text="总数：122   今日：122   已导: 111   已传：111  "
            android:id="@+id/tv_bacth_total"/>

    </LinearLayout>
  </androidx.cardview.widget.CardView>



  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="定位信息"
      android:textSize="11sp"
      android:textColor="@color/gray3"/>
  <androidx.cardview.widget.CardView
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="5dp"
      android:foreground="?attr/selectableItemBackground"
      android:layout_margin="5dp"
      app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:orientation="vertical">


         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="22sp"
             android:id="@+id/tv_latlng"
             android:textStyle="bold"/>



    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/btn_lat_lng"
        android:text="开始定位"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:tag="0"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:id="@+id/btn_delect_latlng"
        android:text="清除定位"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:tag="0"
        android:layout_height="wrap_content"/>
  </LinearLayout>


  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="标签信息"
      android:textSize="11sp"
      android:textColor="@color/gray3"/>
  <androidx.cardview.widget.CardView
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="5dp"
      android:foreground="?attr/selectableItemBackground"
      android:layout_margin="5dp"
      app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:orientation="horizontal">


      <TextView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_gravity="center"
          android:layout_height="wrap_content"
          android:textSize="22sp"
          android:id="@+id/tv_rfid"
          android:textStyle="bold"/>

      <androidx.appcompat.widget.AppCompatButton
          android:layout_width="wrap_content"
          android:text="清除标签"
          android:layout_gravity="center"
          android:id="@+id/btn_delect_rfid"
          android:layout_height="wrap_content"/>

    </LinearLayout>
  </androidx.cardview.widget.CardView>
</LinearLayout>
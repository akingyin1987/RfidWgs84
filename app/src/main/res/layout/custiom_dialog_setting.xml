<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_height="wrap_content">

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:text="定位最大精度："
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:inputType="numberDecimal"
        android:maxLines="2"
        android:id="@+id/edit_max_accuracy"
        android:layout_gravity="center"
        android:padding="3dp"
        android:layout_height="wrap_content"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:text="卫星数："
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:inputType="number"
        android:maxLines="2"
        android:id="@+id/edit_min_satellite"
        android:layout_gravity="center"
        android:padding="3dp"
        android:layout_height="wrap_content"/>
  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:text="卫星信噪比："
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:inputType="numberDecimal"
        android:maxLines="2"
        android:id="@+id/edit_min_snv"
        android:layout_gravity="center"
        android:padding="3dp"
        android:layout_height="wrap_content"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:text="定位总数："
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:inputType="number"
        android:maxLines="2"
        android:layout_gravity="center"
        android:padding="3dp"
        android:id="@+id/edit_max_loc"
        android:layout_height="wrap_content"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:text="定位重复数："
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:inputType="number"
        android:maxLines="2"
        android:layout_gravity="center"
        android:padding="3dp"
        android:id="@+id/edit_max_repeat"
        android:layout_height="wrap_content"/>
  </LinearLayout>

</LinearLayout>